<section class='tags box'>
	<h2 class='title'>Categories</h2>
	<div class='flex'>
		{% for tag in alltags -%}
			<a
				href='/tag/{{ tag.title | slugify }}'
				rel='tag'
				class='{{ tag.title | replace: ' ', '-' | downcase }} button '
				title='{{ tag.title | slug | replace: ' ', '-' | downcase }} tag'>
				{{ tag.title }}
			</a>
		{% endfor -%}
	</div>
</section>
