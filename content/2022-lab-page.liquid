---
pagination:
  data: 2022-labs
  size: 1
permalink: '/2022/lab/{{ pagination.pageNumber | plus: 1 }}/'
layout: wrapper
---
{% for item in pagination.items %}
	<h1>{{ item.title }}</h1>
	<section class='row'>
		<div class='half column'>
			<p>{{ item.description | markdownify }}</p>
		</div>
		<div class='half column' id='data'>
			<strong>Location</strong>: {{ item.location }}<br>
			<strong>Quando</strong>:<br>{{ item.times | markdownify }}<br>
			<strong>Host</strong>: <b class='color'>{{ item.host }}</b><br>
			<figure><img src='{{ item.image }}' alt='{{ item.title }}'></figure>
		</div>
	</section>
	{% comment %}<section class='row'>
		<div class='box'>
			<div class='half column'>
				<h3>{{ item.host }}</h3>
				{% for entity in relations %}
					{% if entity.Ente == host or host contains entity.Cognome %}
						{% entity.bio %}
					{% endif %}
				{% endfor %}
			</div>
			<div class='half column'>
				{% for entity in relations %}
					{% if entity.Ente == host or host contains entity.Cognome %}
						<img src='{% entity.image %}' alt='{% if entity.Ente %}{{ entity.Ente }} - {% endif %}{{ entity.Nome }}'>
					{% endif %}
				{% endfor %}
			</div>
		</div>
	</section>{% endcomment %}
{% endfor %}
{% render 'prenota.liquid', lang: lang, url: page.url %}